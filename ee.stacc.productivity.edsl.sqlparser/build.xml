<?xml version="1.0" encoding="UTF-8"?>
<project name="project" default="default">

	<target name="default" depends="depends" description="description">
        
    </target>

    <target name="depends">
		<exec executable="bison" dir="${basedir}">
			<arg value="--xml=generated/sql.xml"/>
			<arg value="--report=lookahead,itemset"/>
			<arg value="--report-file=generated/sql.report"/>
			<arg value="--output=generated/Parser.java"/>
			<arg value="--language=Java"/>
			<arg value="--debug"/>
			<arg value="grammar/sql.bg"/>
		</exec>	
		<exec executable="bison" dir="${basedir}">
			<arg value="--xml=generated/arith.xml"/>
			<arg value="--report=lookahead,itemset"/>
			<arg value="--report-file=generated/arith.report"/>
			<arg value="--output=generated/Parser.java"/>
			<arg value="--language=Java"/>
			<arg value="--debug"/>
			<arg value="grammar/arith.bg"/>
		</exec>	
	</target>

</project>
