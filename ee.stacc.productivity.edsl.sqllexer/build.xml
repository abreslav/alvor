<?xml version="1.0" encoding="UTF-8"?>
<project name="project" default="default">
	<taskdef classname="JFlex.anttask.JFlexTask" name="jflex" classpath="lib/JFlex.jar"/>
	
    <target name="default" depends="depends" description="description">
        
    </target>

    <target name="depends">  
		<!-- SQL lexer : SQL transducer is generated from it -->
		<jflex
			file="generated/sql.flex"
    		destdir="generated" 
			time="on"
    		nobak="on"
			pack="off"
		/>
		<!-- Generate a class which will generate the data for a transducer -->
    	<java classpath="bin" classname="Generator">
    		<arg file="generated/"/>
    		<arg value="SQLLexer"/>
    		<arg file="generated/"/>
    		<arg value="SQLLexerGen"/>
    	</java>
		<!-- Compile the generated class -->
    	<javac 
    		srcdir="generated" 
    		classpath="generated" 
    		destdir="bin">
    	</javac>
		<!-- Run the compiled class and store the results as a *.java file -->
    	<mkdir dir="src/ee/stacc/productivity/edsl/sqllexer"/>
    	<java 
    		classpath="bin" 
    		classname="SQLLexerGen" 
    		output="src/ee/stacc/productivity/edsl/sqllexer/SQLLexerData.java">
    		<arg value="ee.stacc.productivity.edsl.sqllexer"/>
    		<arg value="SQLLexerData"/>
    	</java>
	</target>

</project>
